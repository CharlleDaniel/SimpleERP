<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textPrimary"
            android:id="@+id/textViewNomeProduto"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView3"
            android:src="@drawable/cifrao"
            android:layout_below="@+id/textViewNomeProduto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/addMarca"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/imageView5"
            android:src="@drawable/cestoqntde"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000000"
            android:id="@+id/textViewPreco"
            android:textSize="10dp"
            android:textColor="@color/textSecondary"
            android:singleLine="true"
            android:maxWidth="55dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1.5dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView14"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="150dp"
            android:src="@drawable/cifrao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000000000000022"
            android:id="@+id/textViewCusto"
            android:textSize="10dp"
            android:singleLine="true"
            android:textColor="@color/textSecondary"
            android:maxWidth="55dp"
            android:layout_alignTop="@+id/imageView14"
            android:layout_toRightOf="@+id/imageView14"
            android:layout_toEndOf="@+id/imageView14"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:id="@+id/textViewQtdInsumo"
            android:textSize="10dp"
            android:layout_alignTop="@+id/imageView15"
            android:layout_toRightOf="@+id/imageView15"
            android:layout_toEndOf="@+id/imageView15"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1.5dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView15"
            android:src="@drawable/pacote"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="230dp" />

    </RelativeLayout>

</LinearLayout>