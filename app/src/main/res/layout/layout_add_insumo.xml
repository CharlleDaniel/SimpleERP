<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1eeee">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bar"
        android:elevation="10dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        android:layout_marginBottom="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:background="@drawable/toolbar_rounded_corners"
            android:id="@+id/rl_2"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Descrição do Insumo"
                android:id="@+id/textView9"
                android:textSize="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view2"
                android:background="@color/colorDivider"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:hint="Nome do Insumo"
                android:textColor="#000000"
                android:backgroundTint="@color/colorPrimary"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quilo"
                android:id="@+id/radioButtonQuilo"
                android:checked="false"
                android:elevation="5dp"
                android:buttonTint="@color/colorPrimary"
                android:layout_below="@+id/radioButtonUnidade"
                android:layout_alignLeft="@+id/radioButtonUnidade"
                android:layout_alignStart="@+id/radioButtonUnidade" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonGrama"
                android:checked="false"
                android:elevation="5dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Grama"
                android:layout_below="@+id/radioButtonQuilo"
                android:layout_alignLeft="@+id/radioButtonQuilo"
                android:layout_alignStart="@+id/radioButtonQuilo" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonUnidade"
                android:checked="true"
                android:elevation="5dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Unidade"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tipo De Medida :"
                android:id="@+id/textView5"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_below="@+id/editText"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignStart="@+id/editText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPreco"
                android:hint="Preço de Uma Unidade"
                android:textColor="#000000"
                android:backgroundTint="@color/colorPrimary"
                android:singleLine="true"
                android:textSize="15dp"
                android:inputType="number|numberDecimal"
                android:layout_below="@+id/radioButtonGrama"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextQtdGrama"
                android:hint="Quantidade de Gramas"
                android:textColor="#000000"
                android:backgroundTint="@color/colorPrimary"
                android:singleLine="true"
                android:textSize="15dp"
                android:inputType="number"
                android:visibility="gone"
                android:layout_below="@+id/editTextPreco"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="3" />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>