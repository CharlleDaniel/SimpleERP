<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textPrimary"
            android:id="@+id/textViewNomeProduto"
            android:layout_gravity="center_horizontal"
            android:text="Nome Insumo"
            android:textSize="16dp"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_alignTop="@+id/addMarca"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/ivPrecos"
            android:src="@drawable/cifrao_red"
            android:layout_below="@+id/textViewNomeProduto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageViewQtdTipo"
            android:background="@drawable/icon_unidade"
            android:layout_below="@+id/textViewNomeProduto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/addMarca"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000000"
            android:id="@+id/textViewPreco"
            android:layout_below="@+id/textViewNomeProduto"
            android:layout_toEndOf="@+id/ivPrecos"
            android:textSize="10dp"
            android:singleLine="true"
            android:layout_marginTop="6.5dp"
            android:textColor="@color/textSecondary"
            android:maxWidth="55dp"
            android:layout_toRightOf="@+id/ivPrecos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000000000000"
            android:id="@+id/textViewQtd"
            android:textSize="10dp"
            android:singleLine="true"
            android:layout_alignTop="@+id/imageViewQtdTipo"
            android:layout_toRightOf="@+id/imageViewQtdTipo"
            android:layout_toEndOf="@+id/imageViewQtdTipo"
            android:layout_marginTop="1.5dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/textSecondary"
            android:maxWidth="90dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/imageView5"
            android:src="@drawable/pacote"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</LinearLayout>