<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textPrimary"
            android:id="@+id/textViewNomeArq"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:singleLine="true"
            android:layout_alignTop="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_marginLeft="5dp"
            android:text="sfsdfsd"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/imageView5"
            android:src="@drawable/excel"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewData"
            android:textSize="10dp"
            android:layout_below="@+id/textViewNomeArq"
            android:layout_alignLeft="@+id/textViewNomeArq"
            android:layout_alignStart="@+id/textViewNomeArq"
            android:text="Modificado em: 08/11/2015 as 21:30hs"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:maxLength="36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTamanho"
            android:textSize="10dp"
            android:text="Tamanho: 0000000000000000000000000000000000000002222222"
            android:textColor="@color/textSecondary"
            android:layout_alignBaseline="@+id/textViewData"
            android:layout_alignBottom="@+id/textViewData"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="238dp"
            android:singleLine="true"
            android:maxLength="20" />

    </RelativeLayout>

</LinearLayout>